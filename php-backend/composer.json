{
  "name": "logbiellc/ple-php-backend",
  "description": "PHP-based reimplementation of PLE system",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "twig/twig": "^3.0",
    "gabordemooij/redbean": "^5.7"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "PLEPHP\\": "src/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "phpstan": "phpstan analyse",
    "phpcs": "phpcs",
    "phpcbf": "phpcbf"
  }
}
